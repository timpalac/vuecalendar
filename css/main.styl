conferences = #7C5ACA
committee-meetings = #EC6C52
competitions = #e11283
festivals = #9a9500
local-events = #81bc00
masterclass = #8e0d57
networking = #2a96a8
public-courses = #179943
webinars = #f0741f
workshops-seminars = #d9232e

screen-sm = 576px
screen-md = 768px
screen-lg = 992px
screen-xl = 1200px

page-nav()
	text-indent: -9999px
	width: 30px
	height: 30px
	position: absolute
	cursor: pointer

page-nav-prev()
	background: url(../images/arrow-prev.svg) center center
	background-size: 100%

page-nav-next()
	background: url(../images/arrow-next.svg) center center
	background-size: 100%

#event-app
	 font-family: "proxima-nova", "Helvetica Neue", Arial, sans-serif
	 max-width: 1440px
	 
	&.detail 
		 max-width: none
	
	h1
		font-size: 32px
		line-height: 1.33em
		padding-top: 10px
		clear: both
		
		@media(min-width:screen-lg)
			padding-top: 25px
			font-size: 48px
			clear: none
			
	h2 
		font-size: 1.6rem
		
	h1, h2, h3, h4
		font-weight: bold
		
	footer
		background: #f9f9f9
		line-height: 2em
		margin: 0 -15px
		
		@media(min-width:screen-md)
			padding: 60px 15px
		
		h4
			font-size: 16px
		
		li
			font-size: 15px !important
			
		.card
			margin: 0
			.card-body
				.container
					@media(max-width:screen-md)
						padding: 0 15px

	.nav-pills
		.nav-link 
			border: solid 2px #d1d1d1
			border-right: 0
			border-radius: 0
			cursor: pointer
			color: #000
			padding: 6px 12px
			font-size: 15px
			
			&.active, &:hover
				background: #2352a1
				color: #fff
			
			&:last-child
				border-right: 2px solid #d1d1d1
				
			@media(max-width:screen-lg)
				flex-grow: 1
				text-align: center
				
	.custom-select
		border: 2px solid #d1d1d1
		border-radius: 0
		background-image: url(../images/arrow-down.svg)
		background-repeat: no-repeat
		background-position: 97% 50%
		background-size: 15px 9px
		
		&#sortBy
			margin-left: 10px
			background-position: 90% 50%
				
	.breadcrumb
		background: none
		padding: 30px 0 5px
		
		li
			font-size: 14px !important
			
			&.breadcrumb-item+.breadcrumb-item::before
				content: ">"
				
			&.breadcrumb-item.active
				color: #000
		
		a
			color: #000
			text-decoration: underline
				
	p.breadcrumb
		font-size: 14px !important

	.card-header
		padding-top: 0
		padding-bottom: 0
		
		.arrow
			background: url(../images/arrow-down.svg) no-repeat center center
			background-size: 100%
			width: 21px
			height: 15px
			float: right
			margin-top: 7px
		
	.card
		background: #d8d8d8
		border: none
		margin: 0 -15px
		border-radius: 0
		
		.container
			background: none
			padding: 0
		
			.btn-link
				color: #000
				font-size: 18px
				padding: .5rem 1rem
				width: 100%
				text-align: left
				text-decoration: none !important
				
				@media(min-width:screen-sm)
					padding-left: 0
					
	.modal
		color: #000

		.modal-dialog
			@media (min-width: screen-sm)
				max-width: 1100px
				
			.modal-content
				border-radius: 0
				border: none
				
				.modal-header
					border-bottom: 0
					
					.close
						opacity: 1
						font-weight: normal
						font-size: 3rem
					
				.modal-body
					padding: 2rem
		
		p
			font-size: 20px
		
	.search-form 
		padding-top: 10px
		margin-right: -15px
		position: relative
		z-index: 500
		
		@media(min-width:sceen-lg)
			padding-top: 40px

		::placeholder
			font-style: italic

		::ms-input-placeholder
			font-style: italic

		:ms-input-placeholder
			font-style: italic

		.form-control
			width: 100%
			border: solid 2px #d1d1d1
			border-radius: 0
			margin-right: 15px
			margin-top: 5px
			position: relative
			z-index: 500

			@media(min-width:screen-lg)
				padding-left: .75rem
				margin-right: 0

		&.float-right
			@media(max-width:screen-lg)
				position: absolute
				top: 0
				left: -15px
				width: 98.6vw
				background: #fff
				padding-top: 60px
				padding-bottom: 15px
				z-index: 1000
				box-shadow: 0 2px 7px 0 rgba(0, 0, 0, 0.2)

				.form-control
					margin-right: 0
					font-size: 20px

				button
					font-size: 20px

				.close-icon
					cursor: pointer
					position: absolute
					top: 20px
					right: 15px
					width: 20px
					height: 20px
					background: url(../images/close.svg) no-repeat center center

		.float-right, &.float-right
			@media(max-width:screen-lg)
				::placeholder
					font-style: normal

				::ms-input-placeholder
					font-style: normal

				:ms-input-placeholder
					font-style: normal
		
		button
			cursor: pointer
			border: none
			background: none
			position: absolute
			right: 20px
			z-index: 1000
			margin-top: 2px
			
		a
			color: #000
			text-decoration: underline
			padding-top: 5px
			display: block
		
	.event-browse-bg
		display: none
		background: #fff
		width: 100%
		height: 100%
		position: absolute
		z-index: 1000
		opacity: .9
		left: 0
		
		&.active
			@media(max-width:screen-lg)
				display: block

	.event-browse, .event-search
		position: relative
		padding-bottom: 50px
			
		.event-col-bg 
			background: #f5f5f5
			position: absolute
			height: 100%
			
		#calendarContent:not(.loaded)
			@media(min-width:screen-lg)
				margin-top: -50px
			
		&-header
			position: relative

			.event-list-filters
				margin-left: 0
					
				&-button
					margin-bottom: 15px
					padding-right: 0
					
				.form-inline
					justify-content: center
					margin-left: 150px
				
			@media(max-width:screen-lg)
				background: #f5f5f5
				clear: both
				padding: 0 15px 20px
				margin: 0 -15px
				
				h4
					margin: 15px 0 0
					font-size: 20px
				
			.view-filters
				min-height: 50px
				
				@media(max-width:screen-lg)
					position: absolute
					z-index: 2000
					width: 100%
					top: -70px
					left: 0
					background: #fff
					padding: 30px 10px
					box-shadow: 0 2px 7px 0 rgba(0,0,0,0.2)
					display: none
					
					h4
						margin-bottom: 15px
						font-size: 22px
					
					&.active
						display: block
				
			#navigate-months
				text-align: center
				
			@media(min-width:screen-lg)
				#navigate-months
					position: absolute
					z-index: 1000
					text-align: left
					bottom: 0
					
			#navigate-month-day
				text-align: center
				
				@media(max-width:screen-lg)
						
					#calNavData
						display: flex
						margin-top: 10px
						margin-right: 0
						
						li
							flex-grow: 1
							
							&.liweek 
								display: none
							
							a
								width: 100%
		
		.event-browse-header
			.event-list-filters-button
				.nav-link:first-child
					@media(max-width:screen-lg)
						margin-right: 25px
						border-right: 2px solid #d1d1d1
					
		.event-search-header
			.event-list-filters-button
				@media(max-width:screen-lg)
					padding-right: 15px

		.event-filter-panel
			padding: 25px
			
			@media(max-width:screen-lg)
				position: absolute
				background: #f5f5f5
				top: 0
				left: 0
				width: 100%
				height: 110vh
				z-index: 1000
			
			h4
				margin-bottom: 1rem
			
			p, .form-group label
				font-weight: bold
				margin-bottom: 5px
				
			.sort-mobile-form
				border-bottom: 1px solid #d1d1d1
				margin: 0 -25px 25px
				padding: 0 25px 20px
				
				.custom-select
					width: 80%
					margin-left: 10px
					background-color: none
			
			&-checkboxes 
				margin-bottom: 10px

				.custom-control-label
					@media(max-width:screen-md)
						line-height: 2.5rem
						padding-left: 18px
						margin-bottom: 2px
				
				.custom-control-label:before
					border-radius: 0
					border-width: 2px
					border-style: solid
					background: none

					@media(max-width:screen-md)
						width: 1.8rem
						height: 1.8rem

				.custom-control-label:after
					@media(max-width:screen-md)
						width: 1.8rem
						height: 1.8rem

				.custom-control-label.selected:before
					border: none
				
				.type-conferences:before 
					border-color: conferences
					
				.type-conferences.selected:before
					background: conferences
					
				.type-committee-meetings:before
					border-color: committee-meetings
					
				.type-committee-meetings.selected:before
					background: committee-meetings
					
				.type-competitions:before
					border-color: competitions
					
				.type-competitions.selected:before
					background: competitions
					
				.type-festivals:before
					border-color: festivals
					
				.type-festivals.selected:before
					background: festivals
					
				.type-local-events:before
					border-color: local-events
					
				.type-local-events.selected:before
					background: local-events
					
				.type-masterclass:before
					border-color: masterclass
					
				.type-masterclass.selected:before
					background: masterclass
					
				.type-networking:before
					border-color: networking
					
				.type-networking.selected:before
					background: networking
					
				.type-public-courses:before
					border-color: public-courses
					
				.type-public-courses.selected:before
					background: public-courses
					
				.type-webinars:before
					border-color: webinars
					
				.type-webinars.selected:before
					background: webinars
					
				.type-workshops--seminars:before
					border-color: workshops-seminars
					
				.type-workshops--seminars.selected:before
					background: workshops-seminars
					
			.btn
				width: 100%
				border-radius: 0
				font-size: 22px
			
		&-wrapper
			position: relative
			
			@media(min-width:screen-lg)
				padding-left: 20px
			
			.change-view	 
				@media(min-width: screen-lg)
					position: absolute
					z-index: 1000
					right: 0
					padding-left: 25px
					
			.filter-event-by
				padding-right: 0
				margin-top: 10px
				
				@media(min-width: screen-lg)
					position: absolute
					z-index: 500
					margin-top: 0
				
		.event-list-browse
			margin-top: 30px
			
			.event-list-paging
				margin-top: 30px
			
				.paging-nav
					page-nav()
					display: inline-block
					position: static
					vertical-align: middle
					
					&.paging-prev
						page-nav-prev()
						margin-right: 25px
						
					&.paging-next
						page-nav-next()
						margin-left: 25px
						
					&.text-black-50
						opacity: .5
						cursor: default
			
		.event-list-filter-heading
			padding-bottom: 20px
			margin-top: 40px
			font-size: 20px

			@media(max-width:screen-lg)
				text-align: center
				margin-top: 10px
				padding-bottom: 10px
		    
			i
				cursor: pointer
				border-radius: 30px
				padding: 6px 11px
				border: 2px solid #d1d1d1
				margin-right: 10px

				@media(max-width:screen-lg)
					margin-top: 4px
					margin-bottom: 4px
				
				&:last-child
					margin-left: 10px
					margin-right: 0
				
			span 
				background: #e4e4e4
				padding: 10px 15px
				font-weight: normal

				@media(max-width:screen-lg)
					padding: 10px 30px

					&.year
						margin-left: 25px
				
		.event-search-form, .no-results
			label 
				font-weight: bold
				display: block
				
			input, select
				width: 100%
				max-width: 255px
				border-radius: 0
				border: solid 2px #d1d1d1
				
				&#eventCommittee
					max-width: 350px
				
			.vdp-datepicker
				width: 100%
				max-width: 255px
				margin-bottom: 10px

				input
					background: url(../images/calendar.svg) no-repeat 97% 50%;
					background-size: 28px 26px;
				
			button
				width: 100%
				max-width: 255px
				border-radius: 0
				margin-top: 10px
				font-size: 22px
				
			.and:after
				content: "and"
				padding-left: 5px
				padding-right: 5px
				font-size: 14px
				
		.no-results
			text-align: center
			border: 1px solid #d1d1d1
			margin: 25px 0 0
			padding: 30px 15px
			
			@media(min-width:screen-lg)
				margin: 50px 0 0
			
			button
				max-width: 400px
				margin-top: 15px
				
	.event-item
		border: solid 1px #d1d1d1
		padding: 10px 0
		margin: 0 0 10px 0
		position: relative
		
		&-bg
			position: absolute
			left: 0
			top: -10px
			height: 100%
			z-index: 0;
			
			@media(min-width: screen-lg)
				top: 0
		
		h3
			font-size: 20px
			line-height: 24px
			a
				color: #000
				text-decoration: underline
				
		.event-date 
			padding: 15px 0
			color: #fff
			font-weight: bold
			font-size: 24px
			line-height: 1.25em
			margin: -10px 0 10px 5px
			position: relative
			z-index: 100
			
			@media(min-width: screen-lg)
				text-align: center
				margin: -10px -15px
				padding: 25px 10px
				
			@media(min-width: screen-xl)
				font-size: 28px
				
	.event-type
		font-size: 16px !important
		border-radius: 15px
		color: #fff
		padding: 3px 15px
		float: left
		
		@media(min-width: screen-lg)
			float: right
			
	.type-conferences .event-item-bg, .type-conferences .event-type
		background: conferences
			
	.type-committee-meetings .event-item-bg, .type-committee-meetings .event-type
		background: committee-meetings
		
	.type-competitions .event-item-bg, .type-competitions .event-type
		background: competitions
		
	.type-festivals .event-item-bg, .type-festivals .event-type
		background: festivals
		
	.type-local-events .event-item-bg, .type-local-events .event-type
		background: local-events
		
	.type-masterclass .event-item-bg, .type-masterclass .event-type
		background: masterclass
		
	.type-networking .event-item-bg, .type-networking .event-type
		background: networking
		
	.type-public-courses .event-item-bg, .type-public-courses .event-type
		background: public-courses
		
	.type-webinars .event-item-bg, .type-webinars .event-type
		background: conferences
		
	.type-workshops--seminars .event-item-bg, .type-workshops--seminars .event-type
		background: workshops-seminars
			
	.event-detail
		h1
			font-size: 28px
			padding-top: 5px
			
		p, li
			font-size: 20px
			
		.container
			padding: 0
			
			@media(min-width:screen-md)
				padding: 0 15px
			
		.btn
			font-size: 22px
			font-weight: bold
			border-radius: 0
			padding: .22rem 1rem
			white-space: normal
			
		&-hero
			padding-bottom: 20px
			
			&-dates
				font-size: 24px
				display: block
				
				@media(max-width:screen-lg)
					padding-right: 50px
					position: relative
				
				&-format
					margin-left: 20px
					cursor: pointer
					position: relative
					
					@media(max-width:screen-lg)
						position: absolute
						right: 20px
						top: 5px
					
					.vue-popover
						width: 350px !important
						left: -165px !important
						top: 35px !important
							
						@media(max-width:screen-lg)
							width: 150px !important
							left: -100px !important
							
						.nav-pills
							padding: 5px
						
						.nav-link
							flex-grow: 1
							text-align: center
							font-size: 20px
							padding: 10px 0
							font-family: "proxima-nova", "Helvetica Neue", Arial, sans-serif
							
							@media(max-width:screen-lg)
								flex-direction: row
								width: 100%
					
			.social-links
				h4 
					font-size: 22px
					margin-bottom: 15px
				li
					display: inline-block
					margin-right: 10px;
					
					& > a
						font-size: 24px
						color: #fff
						background: #000
						padding: 7px
						
				#add-to-calendar
					margin-top: 30px
					display: block
					text-align: center
					
					@media(min-width:screen-sm)
						margin-left: 20px
						margin-top: 0
						display: inline-block
						text-align: left
		
		&-description
			background: #2a96a8
			color: #fff
			padding: 60px 15px
			margin: 0 -15px
			
			.event-pricing
				span:first-child:after
					content: "|"
					padding: 0 10px
			
			.event-speakers
				h3
					font-size: 20px
					
				img
					margin-left: 15px
					
				.speaker-item-detail 
					padding: 5px 15px
					margin: 10px 0 0
					line-height: 1.6em
					
					.read-bio
						text-decoration: underline
						cursor: pointer
					
		&-venue
			padding: 0
			position: relative
			
			@media(min-width:screen-md)
				padding: 60px 0 120px
				
			& > .container
				@media(max-width:screen-md)
					max-width: none
			
			.venue-bg
				background: #f2f2f2
				position: absolute
				left: -15px
				top: 0
				height: 100%
				display: none
				
				@media(min-width:screen-md)
					width: 50%
					display: block
					
			a
				color: #000
				text-decoration: none
				
				&:hover
					text-decoration: underline
			
			.property
				strong 
					display: block
		
			.card-header
				padding: 0
					
			#moreInfoAccordion
				margin-top: 20px
					
			#event-contact
				.container
					padding-left: 0
					margin-top: 30px
					
					@media(min-width:screen-md)
						padding-left: 15px
						padding-right: 0
						margin-top: 0
						
			#event-venue
				@media(max-width:screen-md)
					background: #f2f2f2
					padding-top: 30px
			
		&-resources
			padding: 60px 0
			
			.resource-item
				text-align: center
				margin-bottom: 20px
				
				> a
					color: #4a4a4a
					text-decoration: underline
			
				&-background 
					background: #7e56c5
					text-align: center
					width: 160px
					height: 130px
					position: relative
					margin: 0 auto

					a
						width: 100%
						height: 100%
						position: absolute
						left: 0
						
						img
							margin-top: 25%

			.resources-cta
				.btn
					width: 100%
					max-width: 250px
				
		&-events
			margin-left: -15px
			margin-right: -15px
			border-top: 2px solid #d1d1d1
			padding-top: 60px
			
			.container
				padding-left: 15px
				padding-right: 15px
			
			h2 
				margin-bottom: 30px
			
			.event-item
				border-left: 20px solid #2a96a8
				
				.event-info
					padding-top: 10px
					
					p
						padding-left: 15px
						margin-bottom: 10px
				
					a 
						color: #000
						text-decoration: underline
						
				.save-cal
					margin-left: 10px
					margin-bottom: 10px
					
					@media(min-width:screen-lg)
						float: right
						margin-top: 8%
						
					.add-to-calendar
						.btn
							background: none
							padding: 0
							margin: 0
							border: none !important
							color: #fff

							span
								display: none
							
						.add-to-calendar-icons
							z-index: 1000
							
							h4
								color: #000
								
							a
								padding-left: 5px
									
		&-disclaimer 
			margin: 60px 0
			
			p
				font-style: italic
				font-size: 15px